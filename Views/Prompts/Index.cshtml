@model IEnumerable<PromptShare.Models.Prompt>

@{
    ViewData["Title"] = "Index";
}
<body >
<h1 class="text-center">Discover and Share Your Prompts!</h1>
<br />
<br />

    <p class="d-flex justify-content-center">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<br />
<br />
    <table class="table ">
    <thead>
        <tr>
            <th>
               Prompt Name
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PromptHead)
            </td>
            
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>